    <!-- Dropdown Lists -->
    <details>
      <summary>Template</summary>
      <button class="copy-btn" data-clipboard-text="">template</button> 
    </details>
  </div>
  

  <script>
    // Attach click listeners to all copy buttons lol
    document.querySelectorAll('button.copy-btn').forEach((btn) => {
      btn.addEventListener('click', () => {
        const textToCopy = btn.getAttribute('data-clipboard-text');
        navigator.clipboard.writeText(textToCopy).then(() => {
          btn.textContent = 'Copied!';
          setTimeout(() => {
            btn.textContent = btn.getAttribute('data-clipboard-text') === 'example'
              ? btn.textContent = btn.dataset.originalText || btn.textContent
              : btn.textContent;
            btn.textContent = btn.dataset.originalText || btn.textContent;
          }, 1500);
        }).catch(() => {
          alert('Failed to copy text');
        });
      });
      // Store original button text for restoration
      btn.dataset.originalText = btn.textContent;
    });
  </script>
